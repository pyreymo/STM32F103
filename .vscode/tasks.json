{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash Release Build",
            "type": "process",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "program \"${command:cmake.buildDirectory}/${command:cmake.launchTargetName}.elf\" verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "CMake: Build"
            ]
        }
    ]
}